@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Studenti</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Studenti</h2>
        <table>
            <tr>
                <td>ID</td>
                <td>Name</td>
            </tr>
            @foreach (var student in ViewBag.Students)
            {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
            </tr>
            }
        </table>
        <p class="btn btn-default" >@Html.ActionLink("Svi", "List", "Student")</p>
    </div>
    <div class="col-md-6">
        <h2>Kolegiji</h2>
        <table>
            <tr>
                <td>ID</td>
                <td>Name</td>
                <td>Description</td>
            </tr>
            @foreach (var course in ViewBag.Courses)
            {
                <tr>
                    <td>@course.Id</td>
                    <td>@course.Name</td>
                    <td>@course.Description</td>
                </tr>
            }
        </table>
        <p class="btn btn-default">@Html.ActionLink("Svi", "List", "Course")</p>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h2>Gradovi</h2>
        <table>
            <tr>
                <td>ID</td>
                <td>Name</td>
            </tr>
            @foreach (var city in ViewBag.Cities)
            {
                <tr>
                    <td>@city.Id</td>
                    <td>@city.Name</td>
                </tr>
            }
        </table>
        <p class="btn btn-default">@Html.ActionLink("Svi", "List", "City")</p>
    </div>
</div>